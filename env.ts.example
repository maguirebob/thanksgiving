# Environment Configuration for Thanksgiving Website (TypeScript Version)

# Application Settings
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/thanksgiving_dev

# Security
JWT_SECRET=thanksgiving-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
SESSION_SECRET=thanksgiving-session-secret-change-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Thanksgiving Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #8B4513;
            --secondary-color: #D2691E;
            --accent-color: #CD853F;
            --text-color: #2c3e50;
            --background-color: #f8f9fa;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
        }
        
        .navbar-brand {
            font-family: 'Playfair Display', Georgia, serif;
            font-weight: bold;
            color: var(--primary-color) !important;
        }
        
        .card {
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
        }
        
        .card-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border-radius: 12px 12px 0 0 !important;
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .btn-primary:hover {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }
        
        .btn-success {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }
        
        .btn-success:hover {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }
        
        .status-badge {
            font-size: 0.75rem;
        }
        
        .file-item {
            transition: all 0.3s ease;
        }
        
        .file-item:hover {
            background-color: #f8f9fa;
            transform: translateY(-2px);
        }
        
        .photo-preview {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
        }
        
        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
        }
        
        .stats-number {
            font-size: 2rem;
            font-weight: bold;
        }
        
        .stats-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-turkey me-2"></i>Thanksgiving Website
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">
                    <i class="fas fa-home me-1"></i>Home
                </a>
                <a class="nav-link" href="/admin/dashboard">
                    <i class="fas fa-cog me-1"></i>Admin
                </a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-4 text-center mb-3">
                    <i class="fas fa-images me-3"></i>Photos Volume
                </h1>
                <p class="text-center text-muted">View all photos stored in the volume</p>
            </div>
        </div>

        <!-- Environment Info -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>Volume Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Environment:</strong><br>
                                <span class="badge bg-primary"><%= environment %></span>
                            </div>
                            <div class="col-md-3">
                                <strong>Mount Path:</strong><br>
                                <code><%= mountPath %></code>
                            </div>
                            <div class="col-md-3">
                                <strong>Volume Name:</strong><br>
                                <code><%= volumeName %></code>
                            </div>
                            <div class="col-md-3">
                                <strong>Status:</strong><br>
                                <% if (directoryExists) { %>
                                    <span class="badge bg-success">Directory Exists</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Directory Missing</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <% if (directoryExists) { %>
        <div class="row mb-4">
            <div class="col-md-2">
                <div class="stats-card text-center">
                    <div class="stats-number"><%= stats.totalFiles %></div>
                    <div class="stats-label">Total Files</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="stats-card text-center">
                    <div class="stats-number"><%= stats.imageFiles %></div>
                    <div class="stats-label">Images</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="stats-card text-center">
                    <div class="stats-number"><%= stats.linkedFiles %></div>
                    <div class="stats-label">Linked</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="stats-card text-center">
                    <div class="stats-number"><%= stats.orphanedFiles %></div>
                    <div class="stats-label">Orphaned</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card text-center">
                    <div class="stats-number"><%= stats.totalSize %></div>
                    <div class="stats-label">Total Size</div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Files List -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-folder me-2"></i>Photos Files
                        </h5>
                        <button type="button" class="btn btn-success" onclick="location.reload()">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </div>
                    <div class="card-body">
                        <% if (!directoryExists) { %>
                            <div class="text-center py-5">
                                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                                <h4>Photos Directory Not Found</h4>
                                <p class="text-muted">The photos directory does not exist at: <code><%= mountPath %></code></p>
                                <p class="text-muted">This may be normal if no photos have been uploaded yet.</p>
                            </div>
                        <% } else if (files.length === 0) { %>
                            <div class="text-center py-5">
                                <i class="fas fa-images fa-3x text-muted mb-3"></i>
                                <h4>No Photos Found</h4>
                                <p class="text-muted">The photos directory is empty.</p>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Preview</th>
                                            <th>Filename</th>
                                            <th>Type</th>
                                            <th>Size</th>
                                            <th>Status</th>
                                            <th>Modified</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% files.forEach(file => { %>
                                        <tr class="file-item">
                                            <td>
                                                <% if (file.type === 'image') { %>
                                                    <img src="/api/photos/<%= file.name %>/preview" 
                                                         class="photo-preview" 
                                                         alt="<%= file.name %>"
                                                         onerror="this.src='data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iNjAiIGhlaWdodD0iNjAiIHZpZXdCb3g9IjAgMCA2MCA2MCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHJlY3Qgd2lkdGg9IjYwIiBoZWlnaHQ9IjYwIiBmaWxsPSIjRjVGNUY1Ii8+CjxwYXRoIGQ9Ik0yMCAyMEg0MFY0MEgyMFYyMFoiIGZpbGw9IiNEOUQ5RDkiLz4KPC9zdmc+Cg=='">
                                                <% } else { %>
                                                    <div class="photo-preview bg-light d-flex align-items-center justify-content-center">
                                                        <i class="fas fa-file text-muted"></i>
                                                    </div>
                                                <% } %>
                                            </td>
                                            <td>
                                                <code><%= file.name %></code>
                                            </td>
                                            <td>
                                                <span class="badge bg-info"><%= file.type %></span>
                                            </td>
                                            <td>
                                                <%= (file.size / 1024).toFixed(1) %> KB
                                            </td>
                                            <td>
                                                <% if (file.isLinked) { %>
                                                    <span class="badge bg-success status-badge">
                                                        <i class="fas fa-link me-1"></i>Linked
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge bg-warning status-badge">
                                                        <i class="fas fa-unlink me-1"></i>Orphaned
                                                    </span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <%= new Date(file.modified).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <% if (file.type === 'image') { %>
                                                    <button class="btn btn-sm btn-outline-primary" 
                                                            onclick="viewPhoto('<%= file.name %>')">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                <% } %>
                                                <button class="btn btn-sm btn-outline-danger" 
                                                        onclick="deleteFile('<%= file.name %>')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Photo Viewer Modal -->
    <div class="modal fade" id="photoViewerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="photoViewerModalLabel">Photo Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="photoViewerImg" class="img-fluid" alt="Photo">
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function viewPhoto(filename) {
            const img = document.getElementById('photoViewerImg');
            img.src = `/api/photos/${filename}/preview`;
            const modal = new bootstrap.Modal(document.getElementById('photoViewerModal'));
            modal.show();
        }
        
        function deleteFile(filename) {
            if (confirm(`Are you sure you want to delete ${filename}?`)) {
                // This would need to be implemented with a DELETE endpoint
                alert('Delete functionality not implemented yet');
            }
        }
    </script>
</body>
</html>

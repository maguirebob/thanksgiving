// Global function to close all modals
function closeAllModals() {
    console.log('Closing all modals...');
    
    // Close known modals
    const photoUploadModal = document.getElementById('photoUploadModal');
    const cameraModal = document.getElementById('cameraModal');
    
    if (photoUploadModal) {
        photoUploadModal.style.display = 'none';
        photoUploadModal.style.visibility = 'hidden';
        photoUploadModal.style.opacity = '0';
        photoUploadModal.style.pointerEvents = 'none';
        console.log('Photo upload modal closed');
    }
    if (cameraModal) {
        cameraModal.style.display = 'none';
        cameraModal.style.visibility = 'hidden';
        cameraModal.style.opacity = '0';
        cameraModal.style.pointerEvents = 'none';
        console.log('Camera modal closed');
    }
    
    // Find and close any other modals/overlays with high z-index
    // Only look for elements that are clearly modals/overlays
    const modalSelectors = [
        '[id*="modal"]',
        '[class*="modal"]', 
        '[id*="overlay"]',
        '[class*="overlay"]',
        '[style*="rgba(0, 0, 0, 0.5)"]',
        '[style*="rgba(0,0,0,0.5)"]'
    ];
    
    modalSelectors.forEach(selector => {
        const elements = document.querySelectorAll(selector);
        elements.forEach(element => {
            const style = window.getComputedStyle(element);
            const zIndex = parseInt(style.zIndex);
            
            // Only close if it's positioned and has high z-index
            if (zIndex >= 1000 && 
                (style.position === 'fixed' || style.position === 'absolute')) {
                
                console.log('Found modal/overlay:', {
                    id: element.id,
                    className: element.className,
                    zIndex: zIndex,
                    selector: selector
                });
                element.style.display = 'none';
                element.style.visibility = 'hidden';
                element.style.opacity = '0';
                element.style.pointerEvents = 'none';
            }
        });
    });
    
    console.log('All modals and overlays closed');
}


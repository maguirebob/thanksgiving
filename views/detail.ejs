    const recipeCategory = document.getElementById('recipeCategory');
    const recipeDifficulty = document.getElementById('recipeDifficulty');
    
    if (recipeSearch) recipeSearch.addEventListener('input', filterRecipes);
    if (recipeCategory) recipeCategory.addEventListener('change', filterRecipes);
    if (recipeDifficulty) recipeDifficulty.addEventListener('change', filterRecipes);
    
    // Handle blog search/filter

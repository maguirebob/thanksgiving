<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <!-- Back Navigation -->
        <div class="mb-4">
            <a href="/" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i>
                Back to All Menus
            </a>
        </div>

        <!-- Menu Detail Card -->
        <div class="card">
            <div class="card-body p-4">
                <!-- Header Section -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h1 class="display-5 fw-bold text-primary mb-0">
                                <%= event.menu_title %>
                            </h1>
                            <span class="year-badge fs-5">
                                <%= new Date(event.event_date).getFullYear() %>
                            </span>
                        </div>
                        
                        <div class="mb-3">
                            <h4 class="text-muted mb-2">
                                <i class="fas fa-calendar-alt me-2"></i>
                                <%= new Date(event.event_date).toLocaleDateString('en-US', { 
                                    weekday: 'long', 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %>
                            </h4>
                            <p class="location-text fs-5 mb-2">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                <%= event.event_location %>
                            </p>
                            <span class="badge bg-secondary fs-6">
                                <%= event.event_type %>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Menu Image Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="text-center">
                            <img src="/images/<%= event.menu_image_filename %>" 
                                 alt="<%= event.menu_title %>" 
                                 class="img-fluid rounded shadow"
                                 style="max-height: 600px; object-fit: contain; background-color: #f8f9fa; border: 1px solid #dee2e6;"
                                 onerror="this.src='/images/placeholder-menu.jpg'">
                        </div>
                    </div>
                </div>

                <!-- Description Section -->
                <div class="row">
                    <div class="col-12">
                        <div class="bg-light p-4 rounded">
                            <h3 class="text-primary mb-3">
                                <i class="fas fa-info-circle me-2"></i>
                                About This Menu
                            </h3>
                            <p class="description-text fs-5 mb-0">
                                <%= event.event_description %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Additional Details -->
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-utensils fa-2x mb-2"></i>
                                <h5 class="card-title">Menu Type</h5>
                                <p class="card-text"><%= event.event_type %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-calendar fa-2x mb-2"></i>
                                <h5 class="card-title">Year</h5>
                                <p class="card-text"><%= new Date(event.event_date).getFullYear() %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation Footer -->
        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="fas fa-home me-2"></i>
                View All Menus
            </a>
        </div>
    </div>
</div>

        tabTriggerList.forEach(function (tabTriggerEl) {
            try {
                new bootstrap.Tab(tabTriggerEl);
            } catch (error) {
                console.log('Bootstrap tab initialization error (ignored):', error);
            }
        });
    } catch (error) {
        console.log('Bootstrap initialization error (ignored):', error);
    }

    // Add click handlers for tab badges
    const tabButtons = document.querySelectorAll('#contentTabs .nav-link');
    tabButtons.forEach(button => {
        button.addEventListener('click', function() {
            // Update active tab styling
            tabButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
            
            // Update tab content visibility
            const targetId = this.getAttribute('data-bs-target').substring(1);
            const tabPanes = document.querySelectorAll('.tab-pane');
            tabPanes.forEach(pane => {
                pane.classList.remove('show', 'active');
            });
            
            const targetPane = document.getElementById(targetId);
            if (targetPane) {
                targetPane.classList.add('show', 'active');
            }
        });
    });
}

